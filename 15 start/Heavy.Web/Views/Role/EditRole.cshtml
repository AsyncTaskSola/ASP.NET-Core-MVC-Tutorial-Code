@using Heavy.Web.ViewModels
@model RoleEditViewModel

<form method="post">
    
    <div class="form-group row">
        <label asp-for="Id" class="alert-primary"></label>
        <div class="col-md-10">
            <input class="form-control" asp-for="Id" />
            <span class="invalid" asp-validation-for="Id"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="RoleName" class="alert-primary"></label>
        <div class="col-md-10">
            <input class="form-control" asp-for="RoleName"/>
            <span class="invalid" asp-validation-for="RoleName"></span>
        </div>
    </div>

    <div class="invalid" asp-validation-summary="ModelOnly"></div>
    <button type="submit" class="btn btn-primary">提交</button>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>

</form>

<ul>
    @foreach (var user in Model.Users)
    {
        <li>@user</li>
    }
</ul>
<a asp-action="AddUserToRole" asp-route-roleId="@Model.Id" class="btn btn-primary">为角色添加用户</a>

<a asp-action="DeleteUserToRole" asp-route-roleId="@Model.Id" class="btn btn-primary">为角色移除用户</a>